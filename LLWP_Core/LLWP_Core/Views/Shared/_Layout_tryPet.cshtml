@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Tangerine:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;300;400;500;700;900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin="" />
    <link rel="stylesheet" type="text/css" href="~/css/glider.css">
    <style>
        body {
            font-family: 'Noto Sans TC', sans-serif;
        }

        .list-title {
            margin: 30px auto;
        }

        .room-title {
            margin: 50px 120px;
        }

        .navClass-act {
            padding: 0;
            background-color: #b1d3c5;
        }

        .navbar-brand-step3 {
            padding: 0;
            margin: 0;
        }

        a {
            color: black;
            text-decoration: none;
        }

        .logoSize-step3 {
            width: 4.5rem;
        }

        .fz15 {
            font-size: 1.5rem;
        }

        .ls025 {
            letter-spacing: 0.25rem;
        }

        .nav-reser {
            height: 72px;
            line-height: 56px;
        }

        .booking-nav {
            width: 200px;
            margin: 50px 20px 0 10px;
            font-size: 22px;
            border-right-style: solid;
        }

        .book-nav-link {
            line-height: 80px;
            text-align: end;
        }

        .booking-nav a {
            height: 80px;
        }

        .create-btn {
            background-color: #e1f1e7;
            border: 1px solid gray;
            padding: 2px 5px;
            text-align: center;
            border-radius: .25rem;
            width: 80px;
            font-size: 24px;
            font-weight: 300;
        }

        .p0 {
            padding: 0;
        }
        /*.p40 {
            padding: 4px 0;
        }
        .fz30{
            font-size:26px;
            line-height:30px;
            text-align:right;
            margin:0;
        }
        .mb4{
            margin-bottom:4px;
        }*/
        .create-label {
            font-size: 20px;
            line-height: 24px;
            text-align: right;
            padding: 2px 0 6px 0;
            margin: 0;
            font-weight: 300;
        }

        .create-radio {
            font-size: 20px;
            line-height: 24px;
            text-align: left;
            padding: 2px 0 6px 0;
            margin: 0 0 0 20px;
            font-weight: 300;
        }

        .file-label {
            font-size: 20px;
            line-height: 24px;
            text-align: right;
            padding: 4px 0;
            margin: 0;
            font-weight: 300;
        }

        .file-fImage {
            font-size: 20px;
            line-height: 24px;
            text-align: right;
            padding: 4px 0;
            margin: 0 0 0 20px;
            font-weight: 100;
        }

        footer {
            position: fixed;
            bottom: 0;
            background-color: #e4beb3;
            width: 100%;
        }

            footer p {
                margin: 16px auto;
            }

        .edit-title {
            margin-left: 10px;
        }

        .back-link {
            font-size: 20px;
            color: blue;
        }

        a:hover {
            text-decoration: none;
        }

        .create-form {
            width: 350px;
            margin-bottom: 100px;
        }

        .save-btn {
            width: 100px;
            font-size: 18px;
            align-items: center;
        }

        .showAllBtn {
            width: 150px;
            font-size: 20px;
            align-items: center;
        }

        .createNewBtn {
            width: 220px;
            font-size: 20px;
            align-items: center;
        }

        th {
            text-align: center;
        }

        td {
            line-height: 130px;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navClass-act">
        <button onclick="navRWD()" class="navbar-toggler navBtnRWD" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <a class="navbar-brand-step3" href="#"><img src="~/Content/images/logo.png" class="logoSize-step3" alt=""></a>
                <li class="nav-item">
                    <a class="nav-link fz15 ls025 nav-reser">榕沛社區訂房管理系統</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <div>
        <footer class="page-footer font-medium danger-color">

            <div>
                <div class="container">
                    <div class="row py-2 d-flex align-items-center">
                        <p class="footer-p">榕沛社區 © 2020 Copyright:longlifewithpet.com</p>
                    </div>
                </div>
            </div>

        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
            integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
            integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
            crossorigin="anonymous"></script>
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
            integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
            crossorigin=""></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdn.botframework.com/botframework-webchat/latest/webchat.js"></script>
    <script type="text/javascript" src="/js/webchat.js"></script>
    <script type="text/javascript" src="/js/glider.min.js" charset="big5"></script>
    <script type="text/javascript" src="/js/alljs.js" charset="big5"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
