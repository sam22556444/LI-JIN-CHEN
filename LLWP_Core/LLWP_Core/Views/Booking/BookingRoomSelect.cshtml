@model LLWP_Core.ViewModels.BookingVM
@{
    ViewData["Title"] = "榕沛社區 - 試住體驗細項選擇";
    Layout = "~/Views/Shared/_Layout_Booking.cshtml";
}
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <a class="navbar-brand-step3" href="./index.html"><img src="/images/logo.png" class="logoSize-step3" alt=""></a>
        <li class="nav-item">
            <a class="nav-link fz15 ls025 nav-reser">試住體驗預約系統</a>
        </li>
    </ul>
</div>
<form method="post" action="/Booking/BookingRoomSelect">
    <div class="container">
        <div class="row justify-content-md-center mt5 mb5">
            <div class="col col-lg-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/r1.png" class="d-block w-100 br25">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/r2.png" class="d-block w-100 br25">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/r3.png" class="d-block w-100 br25">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col col-lg-6">
                <h3 class="mt5 mb5 fz2">請提供您的入住資訊：</h3>
                <ul class="list-unstyled">
                    <div class="dis-f">
                        <li class="fz125 res-sele">入住人數：</li>
                        <li>
                            <select class="custom-select res-opt" id="peopleNum" name="peopleNum">
                                <option selected value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </li>
                    </div>
                    <div class="dis-f">
                        <li class="fz125 res-sele">攜帶寵物：</li>
                        <li>
                            <select class="custom-select res-opt" name="takePet">
                                <option selected value="1">不攜帶寵物</option>
                                <option value="2">攜帶狗狗</option>
                                <option value="3">攜帶貓咪</option>
                            </select>
                        </li>
                    </div>
                    <div class="dis-f">
                        <li class="fz125 res-sele">試養計劃：</li>
                        <li>
                            <select class="custom-select res-opt petTry" name="joinTryPet">
                                <option value="1">參加</option>
                                <option selected value="2">不參加</option>
                            </select>
                        </li>
                    </div>
                    <div class="dis-f">
                        <li class="fz125 res-sele">房型選擇：</li>
                        <li>
                            <select class="custom-select res-opt" name="roomType">
                                <option selected value="1">一房一廳 ( 1700元up / 日 )</option>
                                <option value="2">一房兩廳 ( 1900元up / 日 )</option>
                            </select>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid bgc3" id="pOneAct">
        <div class="container pt3 pb5">
            <h3 class="mb3 fz2">您入住期間的活動：</h3>
            <div class="card-deck flex-wrap justify-content-center">
                @foreach (var item in Model.activitydata)
                {
                    <div class="card ml-4 mr-4" style="min-width:310px;max-width:310px; margin-bottom:20px">
                        <img src="@item.FActivityImages" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title tac ls025 fz15">@item.FActivityName</h5>
                            <p class="card-text">
                                <ul class="list-unstyled fz1 lh25 ml10">
                                    <li>日期時間：@item.FActivityTime</li>
                                    @if (item.FActivityPrice == 0 && item.FActivitypeopleLimit == null)
                                    {
                                        <li>費用：免費參加 (不限人數)</li>
                                    }
                                    else if (item.FActivityPrice == 0 && item.FActivitypeopleLimit != null)
                                    {
                                        <li>費用：免費參加 (限額 @item.FActivitypeopleLimit 人)</li>
                                    }
                                    else if (item.FActivityPrice != 0 && item.FActivitypeopleLimit == null)
                                    {
                                        <li>費用：@string.Format("{0:#}", @item.FActivityPrice) 元 (不限人數)</li>
                                    }
                                    else
                                    {
                                        <li>費用：@string.Format("{0:#}", @item.FActivityPrice) 元 (限額 @item.FActivitypeopleLimit 人)</li>
                                    }
                                </ul>
                            </p>
                            <div class="form-ac-check br25 ac-check" style="margin-top:-15px;margin-bottom:-15px">
                                <label class="form-check-label ac-lab mr3 mt2">
                                    <input class="form-check-input-act ac-input" name="addActivity" type="checkbox" value="@item.FActivityId" id="@item.FActivityId">
                                </label>
                                <label class="fz125" for="@item.FActivityId">
                                    參加
                                </label>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container-fluid bgc3" id="pTwoAct">
        <div class="container pt3 pb3">
            <h3 class="fz2">您入住期間的活動：</h3>
            <div class="tryAct-nav mt3">
                <!-- 表頭 -->
                <ul class="tabs fz125 paddingCancel40">
                    <li class="tabs-first tac p1" data-type="1">房客一</li>
                    <!-- data- 可自訂 -->
                    <li class="tabs-last tac p1" data-type="2">房客二</li>
                </ul>
                <!-- 內容 -->
                <ul class="tab-content tab-content-act paddingCancel40">
                    <li class="act-list pt3 row justify-content-around rowCancelmlmr">
                        @foreach (var item in Model.activitydata)
                        {
                            <div class="card ml-4 mr-4" style="min-width:310px;max-width:310px; margin-bottom:20px">
                                <img src="@item.FActivityImages" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title tac ls025 fz15">@item.FActivityName</h5>
                                    <p class="card-text">
                                        <ul class="list-unstyled fz1 lh25 ml10">
                                            <li>日期時間：@item.FActivityTime</li>
                                            @if (item.FActivityPrice == 0 && item.FActivitypeopleLimit == null)
                                            {
                                                <li>費用：免費參加 (不限人數)</li>
                                            }
                                            else if (item.FActivityPrice == 0 && item.FActivitypeopleLimit != null)
                                            {
                                                <li>費用：免費參加 (限額 @item.FActivitypeopleLimit 人)</li>
                                            }
                                            else if (item.FActivityPrice != 0 && item.FActivitypeopleLimit == null)
                                            {
                                                <li>費用：@string.Format("{0:#}", @item.FActivityPrice) 元 (不限人數)</li>
                                            }
                                            else
                                            {
                                                <li>費用：@string.Format("{0:#}", @item.FActivityPrice) 元 (限額 @item.FActivitypeopleLimit 人)</li>
                                            }
                                        </ul>
                                    </p>
                                    <div class="form-ac-check br25 ac-check" style="margin-top:-15px;margin-bottom:-15px">
                                        <label class="form-check-label ac-lab mr3 mt2">
                                            <input class="form-check-input-act ac-input" name="addActivity1" type="checkbox" value="@item.FActivityId" id="1-@item.FActivityId">
                                        </label>
                                        <label class="fz125" for="1-@item.FActivityId">
                                            參加
                                        </label>
                                    </div>
                                </div>
                            </div>
                        }
                    </li>
                    <li class="act-list pt3 act-list-last row justify-content-around rowCancelmlmr">
                        @foreach (var item in Model.activitydata)
                        {
                            <div class="card ml-4 mr-4" style="min-width:310px;max-width:310px; margin-bottom:20px">
                                <img src="@item.FActivityImages" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title tac ls025 fz15">@item.FActivityName</h5>
                                    <p class="card-text">
                                        <ul class="list-unstyled fz1 lh25 ml10">
                                            <li>日期時間：@item.FActivityTime</li>
                                            @if (item.FActivityPrice == 0 && item.FActivitypeopleLimit == null)
                                            {
                                                <li>費用：免費參加 (不限人數)</li>
                                            }
                                            else if (item.FActivityPrice == 0 && item.FActivitypeopleLimit != null)
                                            {
                                                <li>費用：免費參加 (限額 @item.FActivitypeopleLimit 人)</li>
                                            }
                                            else if (item.FActivityPrice != 0 && item.FActivitypeopleLimit == null)
                                            {
                                                <li>費用：@string.Format("{0:#}", @item.FActivityPrice) 元 (不限人數)</li>
                                            }
                                            else
                                            {
                                                <li>費用：@string.Format("{0:#}", @item.FActivityPrice) 元 (限額 @item.FActivitypeopleLimit 人)</li>
                                            }
                                        </ul>
                                    </p>
                                    <div class="form-ac-check br25 ac-check" style="margin-top:-15px;margin-bottom:-15px">
                                        <label class="form-check-label ac-lab mr3 mt2">
                                            <input class="form-check-input-act ac-input" name="addActivity2" type="checkbox" value="@item.FActivityId" id="2-@item.FActivityId">
                                        </label>
                                        <label class="fz125" for="2-@item.FActivityId">
                                            參加
                                        </label>
                                    </div>
                                </div>
                            </div>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid" id="petTry">
        <div class="container pt3 pb5">
            <div class="row justify-content-between">
                <h3 class="mb3 fz2">請選擇一隻參加試養計劃的寵物：</h3>
                <a id="refreshPet" class="btn btn-warning fz15 ls025 mr-4" style="height:50px;">刷新寵物</a>
            </div>
            <div class="card-deck flex-wrap justify-content-center" id="petBlock">
                @foreach (var item in Model.tryPetTable)
                {
                    <div class="card ml-4 mr-3" style="min-width:310px;max-width:310px; margin-bottom:20px">
                        <img src="@item.FTryPetPhoto" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title tac ls025 fz15 mt2 mb3 mb0">@item.FTryPetName</h5>
                            <p class="card-text">
                                <ul class="list-unstyled fz1 lh25 ml15">
                                    <li>種類：@item.FTryPetVar　<span class="ml10">性別：@item.FTryPetSex</span></li>
                                    <li>年齡： @item.FTryPetAge 歲<span class="ml10">體重：@item.FTryPetWei 公斤</span></li>
                                    <li>已絕育：@item.FTryPetFix<span class="ml10">個性：@item.FTryPetNature</span></li>
                                </ul>
                            </p>
                            <div class="form-ac-check br25 ac-check" style="margin-top:-15px;margin-bottom:-15px">
                                <label class="form-check-label ac-lab mr3 mt2">
                                    <input type="radio" name="petradio" class="form-check-input-act ac-input" value="@item.FTryPetId" id="pet-@item.FTryPetId">
                                </label>
                                <label class="fz125" for="pet-@item.FTryPetId">
                                    試養 @item.FTryPetName
                                </label>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="container pt3 pb3 next-btn">
            <a class="btn btn-warning fz15 ls025" asp-action="BookingCalendar" asp-controller="Booking" role="button">返回上一步</a>
            <a class="btn btn-warning fz15 ls025" role="button" id="BookingNextStage1">確定，下一步</a>
        </div>
    </div>
    <button type="submit" style="display:none;" id="BookingNextStage2">確定，下一步</button>
</form>
